  margin-bottom: 20px;
}

.event-list {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.event-card {
  padding: 15px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.event-card button {
  margin-top: 10px;
  padding: 6px 12px;
  cursor: pointer;
}
.message {
  color: green;
  font-weight: bold;
  margin-bottom: 10px;
}






